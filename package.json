{
  "name": "dummyjson-api-tests",
  "version": "1.0.0",
  "description": "API test suite for DummyJSON Products endpoints using Playwright and TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:products": "playwright test tests/products.spec.ts",
    "test:crud": "playwright test tests/products-crud.spec.ts",
    "test:search": "playwright test tests/products-search.spec.ts",
    "test:category": "playwright test tests/products-category.spec.ts"
  },
  "keywords": [
    "playwright",
    "typescript",
    "api-testing",
    "dummyjson",
    "test-automation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
